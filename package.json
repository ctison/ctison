{
  "name": "@ctison/root",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build:",
    "ci": "bun run format:check && bun run lint && bun run test",
    "clean": "turbo run clean",
    "format": "prettier -w . ; sort-package-json",
    "format:check": "prettier --check . && sort-package-json --check",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "test": "turbo run test"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "singleQuote": true
  },
  "dependencies": {},
  "devDependencies": {
    "bun-types": "1.0.7",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "eslint": "8.52.0",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "sort-package-json": "2.6.0",
    "turbo": "1.10.16",
    "typescript": "5.2.2"
  },
  "packageManager": "bun@1.0.7"
}
