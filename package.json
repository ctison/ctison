{
  "name": "@ctison/root",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build:",
    "ci": "pnpm run format:check && pnpm run lint && pnpm run test",
    "clean": "turbo run clean",
    "format": "prettier -w . ; sort-package-json",
    "format:check": "prettier --check . && sort-package-json --check",
    "lint": "turbo run lint:",
    "prepare": "husky install",
    "test": "turbo run test",
    "update": "pnpx npm-check-updates -ui -ws --root"
  },
  "prettier": {
    "jsxSingleQuote": true,
    "singleQuote": true
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "eslint": "8.53.0",
    "husky": "8.0.3",
    "lint-staged": "15.1.0",
    "prettier": "3.1.0",
    "sort-package-json": "2.6.0",
    "ts-node": "10.9.1",
    "turbo": "1.10.16",
    "typescript": "5.2.2"
  },
  "packageManager": "pnpm@8.10.5"
}
