{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "paths": {
      "@/public/*": ["./public/*"],
      "@/*": ["./app/*"]
    }
  },
  "include": ["**/*", ".next/types/**/*.ts"],
  "exclude": [".*/**", "!.next/types/**/*", "out/**"]
}
